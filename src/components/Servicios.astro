<div class="servicios">
    <div class="title">Nuestros servicios</div>
    <div class="projects-grid">
        <!-- Project Card 1 -->
        <div class="project-card">
            <div class="project-image"></div>
            <div class="project-content">
                <h3>Residencia Moderna</h3>
                <p>
                    Diseño contemporáneo que integra espacios interiores y
                    exteriores
                </p>
            </div>
        </div>
        <!-- Project Card 2 -->
        <div class="project-card">
            <div class="project-image"></div>
            <div class="project-content">
                <h3>Centro Comercial</h3>
                <p>
                    Espacio comercial innovador con enfoque en la experiencia
                    del usuario
                </p>
            </div>
        </div>
        <!-- Project Card 3 -->
        <div class="project-card">
            <div class="project-image"></div>
