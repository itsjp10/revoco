---
import logo from '../images/logo.png';
---

<style>
  .top-bar {
    position: fixed;
    height: 120px;
    top: 0;
    left: 0;
    right: 0;
    background-color: white;
    color: black;
    padding: 1rem;
    text-align: center;
    z-index: 1000;
    font-family: 'Montserrat', sans-serif;
  }

  .hidden {
    transform: translateY(-100%);
  }

  .top-bar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    width: 200px;
    height: auto;
  }

  .top-bar-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .link-wrapper {
    position: relative;
    overflow: hidden;
    height: 24px; /* ajusta si cambias el tama√±o del texto */
  }

  .a {
    display: block;
    font-weight: 1000;
    text-decoration: none;
    color: black;
    transition: transform 0.5s ease, color 0.3s ease;
  }

  .a::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 100%;
    color: #c0392b; /* rojo */
    transition: top 0.3s ease;
  }


  .link-wrapper:hover .a {
    transform: translateY(-100%);
    color: transparent;
  }

  .link-wrapper:hover .a::after {
    top: 0;
  }
</style>

<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
</head>

<div id="top-bar" class="top-bar">
  <div class="top-bar-content">
    <div class="top-bar-logo">
      <img class="logo" src={logo.src} alt="Revoco Arquitectura" />
    </div>
    <div class="top-bar-links">
      <div class="link-wrapper"><a class="a" href="/" data-text="Inicio">Inicio</a></div>
      <div class="link-wrapper"><a class="a" href="/nosotros" data-text="Nosotros">Nosotros</a></div>
      <div class="link-wrapper"><a class="a" href="/proyectos" data-text="Proyectos">Proyectos</a></div>
      <div class="link-wrapper"><a class="a" href="/contacto" data-text="Contacto">Contacto</a></div>
    </div>
  </div>
</div>

<script type="module" is:inline>
  let lastScroll = 0;
  const topBar = document.getElementById('top-bar');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > lastScroll && currentScroll > 50) {
      topBar.classList.add('hidden');
    } else {
      topBar.classList.remove('hidden');
    }

    lastScroll = currentScroll;
  });
</script>
